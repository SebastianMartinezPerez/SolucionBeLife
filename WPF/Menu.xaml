            </StackPanel>
        </Button>
        <Button x:Name="btnContrato" HorizontalAlignment="Left" Margin="470,180,0,0" VerticalAlignment="Top" Width="129" Height="159" Click="btnContrato_Click">
            <StackPanel>
                <Image Source="image/Contratos.png" Height="103" Width="104"></Image>
                <TextBox>Contrato
                </TextBox>
            </StackPanel>
        </Button>
        <Image Margin="0,10,538,331" Source="Logo BeLife.png" Stretch="Fill"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="-310,255,0,0" VerticalAlignment="Top"/>
    </Grid>
</Controls:MetroWindow>
